<form method="post" action="{{ path('app_juego_delete', {'id': juego.id}) }}" id="delete-form-{{ juego.id }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ juego.id) }}">
    <button type="button" class="btn btn-danger" onclick="confirmDelete({{ juego.id }})">
        <i class="bi bi-trash-fill"></i> Eliminar
    </button>
</form>

<script>
function confirmDelete(id) {
    Swal.fire({
        title: '¿Estás seguro?',
        text: "Esta acción no se puede deshacer",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#e74c3c',
        cancelButtonColor: '#6c757d',
        confirmButtonText: 'Sí, eliminar',
        cancelButtonText: 'Cancelar'
    }).then((result) => {
        if (result.isConfirmed) {
            document.getElementById('delete-form-' + id).submit();
        }
    });
}
</script>
