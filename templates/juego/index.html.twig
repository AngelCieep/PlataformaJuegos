{% extends '_navbar.html.twig' %}

{% block title %}Gestión de Juegos{% endblock %}

{% block page_content %}
<style>
    .content-wrapper {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: calc(100vh - 56px);
        padding: 40px 20px;
    }
    .crud-container {
        max-width: 1200px;
        margin: 0 auto;
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    }
    h1 { color: #667eea; margin-bottom: 30px; }
    .btn { padding: 8px 16px; border-radius: 8px; text-decoration: none; display: inline-block; margin: 5px; font-weight: 600; border: none; cursor: pointer; }
    .btn-primary { background: #667eea; color: white; }
    .btn-success { background: #2ecc71; color: white; }
    .btn-info { background: #3498db; color: white; }
    .btn:hover { opacity: 0.9; transform: translateY(-2px); transition: all 0.3s; }
    table { width: 100%; border-collapse: collapse; margin: 20px 0; }
    th, td { padding: 12px; text-align: left; border-bottom: 1px solid #e9ecef; }
    th { background: #f8f9fa; color: #667eea; font-weight: bold; }
    tr:hover { background: #f8f9fa; }
    .tag { display: inline-block; padding: 5px 12px; border-radius: 20px; font-size: 0.85em; font-weight: 600; }
    .tag.active { background: #2ecc71; color: white; }
    .tag.inactive { background: #e74c3c; color: white; }
</style>

<div class="crud-container">
    <h1><i class="bi bi-controller"></i> Gestión de Juegos</h1>
    
    <div style="margin-bottom: 20px;">
        <a href="{{ path('app_juego_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Crear Nuevo Juego
        </a>
        <a href="{{ path('app_admin') }}" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i> Volver al Panel
        </a>
    </div>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Token</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for juego in juegos %}
            <tr>
                <td>{{ juego.id }}</td>
                <td><strong>{{ juego.nombre }}</strong></td>
                <td><code>{{ juego.tokenJuego }}</code></td>
                <td>{{ juego.description|slice(0, 50) }}{{ juego.description|length > 50 ? '...' : '' }}</td>
                <td>
                    <select class="form-select form-select-sm" onchange="updateJuegoStatus({{ juego.id }}, this.value)" style="width: auto; display: inline-block;">
                        <option value="1" {% if juego.estado %}selected{% endif %}>Activo</option>
                        <option value="0" {% if not juego.estado %}selected{% endif %}>Inactivo</option>
                    </select>
                </td>
                <td>
                    <a href="{{ path('app_juego_show', {'id': juego.id}) }}" class="btn btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('app_juego_edit', {'id': juego.id}) }}" class="btn btn-primary">
                        <i class="bi bi-pencil"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" style="text-align: center; color: #999;">No hay juegos registrados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<script>
function updateJuegoStatus(juegoId, status) {
    fetch(`/admin/juego/${juegoId}/status`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ status: status })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            Swal.fire({
                icon: 'success',
                title: '¡Actualizado!',
                text: 'Estado actualizado correctamente',
                timer: 2000,
                showConfirmButton: false
            });
        } else {
            Swal.fire('Error', 'No se pudo actualizar el estado', 'error');
        }
    });
}
</script>
{% endblock %}
