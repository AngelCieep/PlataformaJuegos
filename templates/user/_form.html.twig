<style>
    .form-group {
        margin-bottom: 20px;
    }
    .form-group label {
        display: block;
        color: #1B4079;
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 0.95em;
    }
    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        font-size: 1em;
        transition: all 0.3s;
    }
    .form-control:focus {
        outline: none;
        border-color: #1B4079;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }
    .form-check {
        margin-bottom: 15px;
    }
    .form-check-label {
        margin-left: 8px;
        color: #666;
    }
    select.form-control {
        cursor: pointer;
    }
    textarea.form-control {
        min-height: 120px;
        resize: vertical;
    }
    .btn-submit {
        background: linear-gradient(135deg, #1B4079 0%, #4D7C8A 100%);
        color: white;
        padding: 12px 30px;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        font-size: 1em;
        cursor: pointer;
        transition: all 0.3s;
    }
    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
    }
    .invalid-feedback {
        color: #e74c3c;
        font-size: 0.9em;
        margin-top: 5px;
    }
</style>

{{ form_start(form, {'attr': {'class': 'modern-form'}}) }}
    <div class="form-group">
        {{ form_label(form.email) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'ejemplo@correo.com'}}) }}
        {{ form_errors(form.email) }}
    </div>
    
    <div class="form-group">
        {{ form_label(form.roles) }}
        {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.roles) }}
    </div>
    
    <div class="form-group">
        {{ form_label(form.nombre) }}
        {{ form_widget(form.nombre, {'attr': {'class': 'form-control', 'placeholder': 'Nombre del usuario'}}) }}
        {{ form_errors(form.nombre) }}
    </div>
    
    {% if form.plainPassword is defined %}
    <div class="form-group">
        {{ form_label(form.plainPassword) }}
        {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese la contrase√±a'}}) }}
        {{ form_errors(form.plainPassword) }}
    </div>
    {% endif %}
    
    {% if form.estado is defined %}
    <div class="form-check">
        {{ form_widget(form.estado, {'attr': {'class': 'form-check-input'}}) }}
        {{ form_label(form.estado, null, {'label_attr': {'class': 'form-check-label'}}) }}
        {{ form_errors(form.estado) }}
    </div>
    {% endif %}
    
    {{ form_rest(form) }}
    
    <button class="btn-submit">
        <i class="bi bi-check-circle"></i> {{ button_label|default('Guardar') }}
    </button>
{{ form_end(form) }}
