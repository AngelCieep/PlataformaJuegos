{% extends '_navbar.html.twig' %}

{% block title %}Panel de Administraci칩n{% endblock %}

{% block page_content %}
<style>
    html, body {
        height: 100vh;
        overflow: hidden;
        margin: 0;
        padding: 0;
    }

    body {
        background: linear-gradient(135deg, #1B4079 0%, #4D7C8A 100%);
        font-family: 'Arial', sans-serif;
        display: flex;
        flex-direction: column;
    }

    .content-wrapper {
        background: linear-gradient(135deg, #1B4079 0%, #4D7C8A 100%);
        min-height: calc(100vh - 56px);
        height: calc(100vh - 56px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px;
        overflow: hidden;
        box-sizing: border-box;
    }

    .panel {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 35px 50px;
        box-shadow: 0 25px 70px rgba(0,0,0,0.3);
        width: 95%;
        max-width: 1600px;
        max-height: 100%;
        text-align: center;
        animation: fadeInUp 0.6s ease-out;
        display: flex;
        flex-direction: column;
        box-sizing: border-box;
    }
    
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    h1 { 
        color: #1B4079; 
        margin: 0 0 10px 0;
        font-size: 2.8rem;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        letter-spacing: -1px;
    }
    
    .subtitle { 
        color: #666; 
        margin: 0 0 35px 0;
        font-size: 1.3rem;
        font-weight: 400;
    }

    .menu-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 25px;
        flex: 1;
        align-content: center;
    }
    
    @media (max-width: 1200px) {
        .menu-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }
    }
    
    @media (max-width: 768px) {
        .menu-grid {
            grid-template-columns: 1fr;
            gap: 15px;
        }
        
        h1 {
            font-size: 1.8rem;
        }
        
        .subtitle {
            font-size: 1rem;
        }
        
        .panel {
            padding: 20px 15px;
            width: 98%;
        }
        
        .menu-card {
            min-height: 140px;
            padding: 20px 15px;
        }
        
        .menu-card i {
            font-size: 2.5rem;
        }
        
        .menu-card h3 {
            font-size: 1.2rem;
        }
        
        .menu-card p {
            font-size: 0.85rem;
        }
    }

    .menu-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 35px 25px;
        text-decoration: none;
        color: #333;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border: 3px solid transparent;
        position: relative;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        height: 100%;
        min-height: 220px;
    }
    
    .menu-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(27, 64, 121, 0.1) 0%, rgba(77, 124, 138, 0.1) 100%);
        opacity: 0;
        transition: opacity 0.4s ease;
        z-index: 0;
    }
    
    .menu-card:hover::before {
        opacity: 1;
    }
    
    .menu-card:hover {
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 20px 50px rgba(27, 64, 121, 0.3);
        border-color: #1B4079;
    }
    
    .menu-card i {
        font-size: 4.5rem;
        margin-bottom: 18px;
        transition: all 0.4s ease;
        position: relative;
        z-index: 1;
    }
    
    .menu-card:hover i {
        transform: scale(1.1) rotate(5deg);
    }
    
    .menu-card h3 {
        font-size: 1.5rem;
        margin: 0;
        font-weight: 700;
        position: relative;
        z-index: 1;
        color: #333;
    }
    
    .menu-card p {
        margin-top: 10px;
        color: #666;
        font-size: 1rem;
        position: relative;
        z-index: 1;
        font-weight: 500;
        line-height: 1.4;
    }
    
    /* Colores diferentes para cada card */
    .menu-card:nth-child(1) i { color: #1B4079; }
    .menu-card:nth-child(2) i { color: #4D7C8A; }
    .menu-card:nth-child(3) i { color: #8FAD88; }
    .menu-card:nth-child(4) i { color: #7F9C96; }
    
    .menu-card:nth-child(1):hover { border-color: #1B4079; }
    .menu-card:nth-child(2):hover { border-color: #4D7C8A; }
    .menu-card:nth-child(3):hover { border-color: #8FAD88; }
    .menu-card:nth-child(4):hover { border-color: #7F9C96; }
    
    .menu-card:nth-child(1):hover {
        box-shadow: 0 20px 50px rgba(27, 64, 121, 0.4);
    }
    
    .menu-card:nth-child(2):hover {
        box-shadow: 0 20px 50px rgba(77, 124, 138, 0.4);
    }
    
    .menu-card:nth-child(3):hover {
        box-shadow: 0 20px 50px rgba(143, 173, 136, 0.4);
    }
    
    .menu-card:nth-child(4):hover {
        box-shadow: 0 20px 50px rgba(127, 156, 150, 0.4);
    }

    /* Animaci칩n de entrada escalonada */
    .menu-card:nth-child(1) { animation: fadeInUp 0.6s ease-out 0.1s both; }
    .menu-card:nth-child(2) { animation: fadeInUp 0.6s ease-out 0.2s both; }
    .menu-card:nth-child(3) { animation: fadeInUp 0.6s ease-out 0.3s both; }
    .menu-card:nth-child(4) { animation: fadeInUp 0.6s ease-out 0.4s both; }
</style>

<div class="content-wrapper">
    <div class="panel">
        <h1><i class="bi bi-gear-fill" style="color: #4D7C8A;"></i> Panel de Administraci칩n</h1>
        <p class="subtitle">Gestiona usuarios, juegos y accesos del sistema</p>
        
        <div class="menu-grid">
            <a href="{{ path('app_user_index') }}" class="menu-card">
                <i class="bi bi-people-fill"></i>
                <h3>Gestionar Usuarios</h3>
                <p>Administra usuarios, permisos y accesos</p>
            </a>
            
            <a href="{{ path('app_partida_index') }}" class="menu-card">
                <i class="bi bi-trophy-fill"></i>
                <h3>Gestionar Partidas</h3>
                <p>Controla partidas y resultados</p>
            </a>
            
            <a href="{{ path('app_juego_index') }}" class="menu-card">
                <i class="bi bi-controller"></i>
                <h3>Gestionar Juegos</h3>
                <p>Administra cat치logo de juegos</p>
            </a>
            
            <a href="{{ path('app_aplicacion_index') }}" class="menu-card">
                <i class="bi bi-app-indicator"></i>
                <h3>Gestionar Aplicaciones</h3>
                <p>Configura aplicaciones del sistema</p>
            </a>
        </div>
    </div>
</div>
{% endblock %}