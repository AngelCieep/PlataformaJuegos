{% extends '_navbar.html.twig' %}

{% block title %}Panel de Administración{% endblock %}

{% block page_content %}
<style>
    .content-wrapper {
        background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%);
        min-height: calc(100vh - 56px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .panel {
        background: #fff;
        border-radius: 25px;
        padding: 40px;
        box-shadow: 0 25px 70px rgba(0,0,0,0.4);
        width: 100%;
        max-width: 1000px;
        text-align: center;
    }
    
    h1 { 
        color: #2c5364; 
        margin-bottom: 10px;
        font-size: 2.5rem;
    }
    
    .subtitle { 
        color: #666; 
        margin-bottom: 50px;
        font-size: 1.2rem;
    }

    .menu-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 30px;
        margin-top: 30px;
    }
    
    @media (max-width: 768px) {
        .menu-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }
    }

    .menu-card {
        background: linear-gradient(135deg, #2c5364 0%, #203a43 100%);
        border-radius: 20px;
        padding: 40px 30px;
        text-decoration: none;
        color: white;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 200px;
        border: 3px solid transparent;
    }
    
    .menu-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(44, 83, 100, 0.3);
        border-color: #ffd166;
        background: linear-gradient(135deg, #203a43 0%, #2c5364 100%);
    }
    
    .menu-card i {
        font-size: 3.5rem;
        margin-bottom: 20px;
        color: #ffd166;
    }
    
    .menu-card h3 {
        font-size: 1.8rem;
        margin: 0;
        font-weight: 600;
    }
    
    .menu-card p {
        margin-top: 10px;
        color: rgba(255, 255, 255, 0.8);
        font-size: 1rem;
    }
    
    /* Colores diferentes para cada card */
    .menu-card:nth-child(1) { background: linear-gradient(135deg, #2c5364 0%, #203a43 100%); }
    .menu-card:nth-child(2) { background: linear-gradient(135deg, #8A2387 0%, #E94057 100%); }
    .menu-card:nth-child(3) { background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); }
    .menu-card:nth-child(4) { background: linear-gradient(135deg, #ff6b6b 0%, #ffa8a8 100%); }
    
    .menu-card:nth-child(1):hover { background: linear-gradient(135deg, #203a43 0%, #2c5364 100%); }
    .menu-card:nth-child(2):hover { background: linear-gradient(135deg, #E94057 0%, #8A2387 100%); }
    .menu-card:nth-child(3):hover { background: linear-gradient(135deg, #38ef7d 0%, #11998e 100%); }
    .menu-card:nth-child(4):hover { background: linear-gradient(135deg, #ffa8a8 0%, #ff6b6b 100%); }
    
    .menu-card:nth-child(1) i { color: #4ecdc4; }
    .menu-card:nth-child(2) i { color: #ffd166; }
    .menu-card:nth-child(3) i { color: #06d6a0; }
    .menu-card:nth-child(4) i { color: #ff9e6d; }
</style>

<div class="content-wrapper">
    <div class="panel">
        <h1>Panel de Administración</h1>
        <p class="subtitle">Gestiona usuarios y accesos del sistema</p>
        
        <div class="menu-grid">
            <a href="{{ path('app_user_index') }}" class="menu-card">
                <i class="bi bi-people-fill"></i>
                <h3>Gestionar Usuarios</h3>
                <p>Administra usuarios, permisos y accesos</p>
            </a>
            
            <a href="{{ path('app_partida_index') }}" class="menu-card">
                <i class="bi bi-trophy-fill"></i>
                <h3>Gestionar Partidas</h3>
                <p>Controla partidas y resultados</p>
            </a>
            
            <a href="{{ path('app_juego_index') }}" class="menu-card">
                <i class="bi bi-controller"></i>
                <h3>Gestionar Juegos</h3>
                <p>Administra catálogo de juegos</p>
            </a>
            
            <a href="{{ path('app_aplicacion_index') }}" class="menu-card">
                <i class="bi bi-app-indicator"></i>
                <h3>Gestionar Aplicaciones</h3>
                <p>Configura aplicaciones del sistema</p>
            </a>
        </div>
    </div>
</div>
{% endblock %}