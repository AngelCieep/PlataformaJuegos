{% extends '_navbar.html.twig' %}

{% block title %}Documentación API - ScoreNest{% endblock %}

{% block page_content %}
<style>
    html, body {
        height: 100vh;
        margin: 0;
        padding: 0;
    }

    body {
        background: linear-gradient(135deg, #1B4079 0%, #4D7C8A 100%);
        font-family: 'Arial', sans-serif;
    }

    .api-wrapper {
        background: linear-gradient(135deg, #1B4079 0%, #4D7C8A 100%);
        min-height: calc(100vh - 56px);
        padding: 30px 20px;
        overflow-y: auto;
    }

    .api-container {
        max-width: 1400px;
        margin: 0 auto;
    }

    .api-header {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 30px 40px;
        margin-bottom: 30px;
        text-align: center;
        box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        animation: fadeInDown 0.6s ease-out;
    }

    .api-header h1 {
        color: #1B4079;
        font-size: 2.5rem;
        margin: 0 0 10px 0;
        font-weight: 700;
    }

    .api-header p {
        color: #666;
        font-size: 1.1rem;
        margin: 0;
    }

    .endpoint-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 25px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        animation: fadeInUp 0.6s ease-out;
        border: 1px solid rgba(255, 255, 255, 0.2);
        position: relative;
        overflow: hidden;
    }

    .endpoint-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 5px;
        height: 100%;
        background: linear-gradient(180deg, #1B4079 0%, #4D7C8A 100%);
    }

    .endpoint-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 50px rgba(27, 64, 121, 0.4);
        border: 1px solid rgba(77, 124, 138, 0.3);
    }

    .endpoint-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
        flex-wrap: wrap;
    }

    .method-badge {
        display: inline-block;
        padding: 10px 20px;
        border-radius: 12px;
        font-weight: 700;
        font-size: 0.85rem;
        letter-spacing: 1px;
        text-transform: uppercase;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

    .method-badge:hover {
        transform: scale(1.05);
    }

    .method-get {
        background: linear-gradient(135deg, #7F9C96 0%, #C7DB94 100%);
        color: white;
    }

    .method-post {
        background: linear-gradient(135deg, #1B4079 0%, #4D7C8A 100%);
        color: white;
    }

    .endpoint-url {
        font-family: 'Courier New', monospace;
        font-size: 1.3rem;
        color: #333;
        font-weight: 600;
    }

    .endpoint-description {
        color: #666;
        margin-bottom: 20px;
        font-size: 1rem;
        line-height: 1.6;
    }

    .section-title {
        color: #1B4079;
        font-weight: 700;
        font-size: 1.2rem;
        margin: 25px 0 15px 0;
        display: flex;
        align-items: center;
        gap: 10px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .section-title i {
        font-size: 1.3rem;
    }

    .code-block {
        background: linear-gradient(145deg, #1e1e1e 0%, #2d2d2d 100%);
        color: #f8f8f2;
        padding: 20px;
        border-radius: 12px;
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
        overflow-x: auto;
        margin: 15px 0;
        box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
    }

    .code-block:hover {
        box-shadow: 0 12px 35px rgba(0,0,0,0.4);
        transform: translateY(-2px);
    }

    .response-ok {
        border-left: 5px solid #8FAD88;
        padding: 20px;
        margin: 20px 0;
        background: linear-gradient(135deg, rgba(143, 173, 136, 0.05) 0%, rgba(199, 219, 148, 0.05) 100%);
        border-radius: 12px;
        transition: all 0.3s ease;
    }

    .response-ok:hover {
        transform: translateX(5px);
        box-shadow: 0 5px 15px rgba(143, 173, 136, 0.2);
    }

    .response-error {
        border-left: 5px solid #4D7C8A;
        padding: 20px;
        margin: 20px 0;
        background: linear-gradient(135deg, rgba(77, 124, 138, 0.05) 0%, rgba(127, 156, 150, 0.05) 100%);
        border-radius: 12px;
        transition: all 0.3s ease;
    }

    .response-title {
        font-weight: 700;
        margin-bottom: 8px;
        font-size: 1rem;
    }

    .response-ok .response-title {
        color: #8FAD88;
    }

    .response-error .response-title {
        color: #4D7C8A;
    }

    .error-toggle {
        cursor: pointer;
        background: linear-gradient(135deg, rgba(77, 124, 138, 0.1) 0%, rgba(127, 156, 150, 0.1) 100%);
        padding: 15px 20px;
        border-radius: 12px;
        margin: 10px 0;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        justify-content: space-between;
        font-weight: 700;
        color: #1B4079;
        border: 2px solid rgba(77, 124, 138, 0.2);
    }

    .error-toggle:hover {
        background: linear-gradient(135deg, rgba(77, 124, 138, 0.2) 0%, rgba(127, 156, 150, 0.2) 100%);
        transform: translateX(5px);
        border-color: rgba(77, 124, 138, 0.4);
        box-shadow: 0 5px 15px rgba(77, 124, 138, 0.2);
    }

    .error-toggle i {
        transition: transform 0.3s ease;
    }

    .error-toggle.collapsed i {
        transform: rotate(-90deg);
    }

    .error-content {
        margin-top: 15px;
        padding: 20px;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.5) 0%, rgba(255, 255, 255, 0.3) 100%);
        border-radius: 12px;
        backdrop-filter: blur(5px);
        border: 1px solid rgba(77, 124, 138, 0.1);
    }

    .error-item {
        margin-bottom: 20px;
        padding: 15px;
        background: rgba(255, 255, 255, 0.4);
        border-radius: 10px;
        border: 1px solid rgba(77, 124, 138, 0.1);
        transition: all 0.3s ease;
    }

    .error-item:hover {
        background: rgba(255, 255, 255, 0.6);
        transform: translateX(3px);
    }

    .error-item:last-child {
        margin-bottom: 0;
    }

    .error-item strong {
        color: #1B4079;
        display: block;
        margin-bottom: 10px;
        font-size: 1rem;
    }

    .notes-section {
        background: linear-gradient(135deg, rgba(199, 219, 148, 0.2) 0%, rgba(143, 173, 136, 0.15) 100%);
        border: 2px solid rgba(199, 219, 148, 0.5);
        border-radius: 20px;
        padding: 30px;
        margin-top: 30px;
        backdrop-filter: blur(10px);
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }

    .notes-section:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 50px rgba(143, 173, 136, 0.3);
    }

    .notes-section h3 {
        color: #1B4079;
        margin: 0 0 20px 0;
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 1.5rem;
        font-weight: 700;
    }

    .notes-section ul {
        color: #555;
        line-height: 2;
        font-size: 1rem;
    }

    .notes-section ul li {
        margin-bottom: 12px;
        transition: all 0.3s ease;
    }

    .notes-section ul li:hover {
        transform: translateX(5px);
        color: #333;
    }

    .notes-section code {
        background: rgba(27, 64, 121, 0.15);
        padding: 4px 8px;
        border-radius: 6px;
        font-family: 'Courier New', monospace;
        color: #1B4079;
        font-weight: 600;
    }

    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .endpoint-card:nth-child(1) { animation-delay: 0.1s; }
    .endpoint-card:nth-child(2) { animation-delay: 0.2s; }
    .endpoint-card:nth-child(3) { animation-delay: 0.3s; }
    .endpoint-card:nth-child(4) { animation-delay: 0.4s; }
    .endpoint-card:nth-child(5) { animation-delay: 0.5s; }
    .endpoint-card:nth-child(6) { animation-delay: 0.6s; }

    @media (max-width: 768px) {
        .api-header h1 {
            font-size: 1.8rem;
        }
        
        .endpoint-url {
            font-size: 1rem;
        }
        
        .code-block {
            font-size: 0.75rem;
        }
    }
</style>

