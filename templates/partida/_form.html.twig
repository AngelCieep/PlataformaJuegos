<style>
    .form-group {
        margin-bottom: 20px;
    }
    .form-group label {
        display: block;
        color: #1B4079;
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 0.95em;
    }
    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        font-size: 1em;
        transition: all 0.3s;
    }
    .form-control:focus {
        outline: none;
        border-color: #1B4079;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }
    select.form-control {
        cursor: pointer;
    }
    .btn-submit {
        background: linear-gradient(135deg, #1B4079 0%, #4D7C8A 100%);
        color: white;
        padding: 12px 30px;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        font-size: 1em;
        cursor: pointer;
        transition: all 0.3s;
    }
    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
    }
    .invalid-feedback {
        color: #e74c3c;
        font-size: 0.9em;
        margin-top: 5px;
    }
</style>

{{ form_start(form, {'attr': {'class': 'modern-form'}}) }}
    <div class="form-group">
        {{ form_label(form.puntos) }}
        {{ form_widget(form.puntos, {'attr': {'class': 'form-control', 'placeholder': 'Puntuaci√≥n obtenida'}}) }}
        {{ form_errors(form.puntos) }}
    </div>
    
    <div class="form-group">
        {{ form_label(form.fecha) }}
        {{ form_widget(form.fecha, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.fecha) }}
    </div>
    
    <div class="form-group">
        {{ form_label(form.usuario) }}
        {{ form_widget(form.usuario, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.usuario) }}
    </div>
    
    <div class="form-group">
        {{ form_label(form.juego) }}
        {{ form_widget(form.juego, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.juego) }}
    </div>
    
    {{ form_rest(form) }}
    
    <button class="btn-submit">
        <i class="bi bi-check-circle"></i> {{ button_label|default('Guardar') }}
    </button>
{{ form_end(form) }}
