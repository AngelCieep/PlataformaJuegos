        height: 100vh;
        overflow: hidden;
        margin: 0;
        padding: 0;
    }

    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        font-family: 'Arial', sans-serif;
        display: flex;
        flex-direction: column;
    }

    .game-container {
        display: flex;
        gap: 0;
        padding: 0;
        width: 100%;
        max-width: 100%;
        margin: 0;
        align-items: flex-start;
        box-sizing: border-box;
        height: calc(100vh - 56px);
        overflow: hidden;
    }

    .ranking-section {
        flex: 0 0 25%;
        display: flex;
        flex-direction: column;
        gap: 15px;
        justify-content: flex-start;
        align-items: center;
        box-sizing: border-box;
        overflow-y: auto;
        padding: 20px 15px;
        height: 100%;
    }

    .game-section {
        flex: 0 0 50%;
        display: flex;
        flex-direction: column;
        align-items: stretch;
        gap: 0;
        justify-content: flex-start;
        box-sizing: border-box;
        overflow: hidden;
        padding: 20px 15px;
        height: 100%;
    }

    .info-section {
        flex: 0 0 25%;
        display: flex;
        flex-direction: column;
        gap: 15px;
        justify-content: flex-start;
        align-items: center;
        box-sizing: border-box;
        overflow-y: auto;
        padding: 20px 15px;
        height: 100%;
    }

    .ranking-section {
        grid-column: 4;
        display: flex;
        flex-direction: column;
        gap: 15px;
        width: 300px;
    }

    .game-row {
        display: flex;
        gap: 15px;
        align-items: flex-start;
        justify-content: center;
        max-width: 100%;
    }

    .back-button {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        text-decoration: none;
        padding: 12px 24px;
        border-radius: 10px;
        text-align: center;
        font-weight: 600;
        transition: transform 0.2s, box-shadow 0.2s;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .back-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        color: white;
    }

    .back-button i {
        margin-right: 8px;
    }

    .back-button i {
        margin-right: 8px;
    }

    .hold-box {
        display: flex;
        flex-direction: column;
    }

    .next-box {
        display: flex;
        flex-direction: column;
    }

