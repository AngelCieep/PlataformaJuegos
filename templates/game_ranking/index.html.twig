{% extends '_navbar.html.twig' %}

{% block title %}Ranking de Juegos{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        html, body {
            height: 100vh;
            overflow: hidden;
            margin: 0;
            padding: 0;
        }
        
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .ranking-page-container {
            height: calc(100vh - 56px);
            overflow: hidden;
            padding: 20px;
            box-sizing: border-box;
        }
        
        .ranking-row {
            height: 100%;
            overflow: hidden;
        }
        
        .sidebar-col {
            height: 100%;
            overflow: hidden;
            padding-right: 10px;
        }
        
        .ranking-col {
            height: 100%;
            overflow: hidden;
            padding-left: 10px;
        }
        
        .sidebar {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            height: 100%;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
        }
        
        .sidebar h3 {
            color: #667eea;
            font-weight: bold;
            margin-bottom: 20px;
            border-bottom: 3px solid #667eea;
            padding-bottom: 10px;
            flex-shrink: 0;
        }
        
        .games-list {
            overflow-y: auto;
            flex: 1;
            padding-right: 5px;
        }
        
        .game-btn {
            width: 100%;
            text-align: left;
            padding: 12px 20px;
            margin-bottom: 10px;
            border: 2px solid transparent;
            border-radius: 10px;
            background: #f8f9fa;
            color: #333;
            transition: all 0.3s ease;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .game-position {
            font-weight: bold;
            font-size: 1.1em;
            min-width: 30px;
            text-align: center;
        }
        
        .game-position.gold {
            color: #FFD700;
        }
        
        .game-position.silver {
            color: #C0C0C0;
        }
        
        .game-position.bronze {
            color: #CD7F32;
        }
        
        .game-info {
            flex: 1;
        }
        
        .game-btn:hover {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            transform: translateX(5px);
            border-color: #764ba2;
        }
        
        .game-btn.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-color: #764ba2;
            font-weight: bold;
        }
        
        .game-btn i {
            margin-right: 10px;
        }
        
        .game-top1 {
            display: block;
            font-size: 0.8em;
            margin-top: 5px;
            opacity: 0.9;
        }
        
        .game-top1 .player-name {
            font-weight: 600;
        }
        
        .game-top1 .player-score {
            font-weight: bold;
        }
        
        .ranking-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            height: 100%;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
        }
        
        .ranking-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
            text-align: center;
            flex-shrink: 0;
        }
        
        .ranking-header h2 {
            margin: 0;
            font-weight: bold;
        }
        
        .ranking-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 10px;
        }
        
        .ranking-table thead th {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px;
            text-align: left;
            font-weight: bold;
            border: none;
        }
        
        .ranking-table thead th:first-child {
            border-radius: 10px 0 0 10px;
        }
        
        .ranking-table thead th:last-child {
            border-radius: 0 10px 10px 0;
        }
        
        .ranking-table tbody tr {
            background: white;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }
        
        .ranking-table tbody tr:hover {
            transform: scale(1.02);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        
        .ranking-table tbody td {
            padding: 15px;
            border: none;
        }
        
        .ranking-table tbody tr td:first-child {
            border-radius: 10px 0 0 10px;
        }
        
        .ranking-table tbody tr td:last-child {
            border-radius: 0 10px 10px 0;
        }
        
        .position {
            font-weight: bold;
            font-size: 1.2em;
            color: #667eea;
        }
        
        .position.gold {
            color: #FFD700;
            font-size: 1.5em;
        }
        
        .position.silver {
            color: #C0C0C0;
            font-size: 1.4em;
        }
        
        .position.bronze {
            color: #CD7F32;
            font-size: 1.3em;
        }
        
        .points {
            font-weight: bold;
            color: #764ba2;
            font-size: 1.1em;
        }
        
        .no-data {
            text-align: center;
            padding: 50px;
            color: #666;
        }
        
        .no-data i {
            font-size: 4em;
            color: #ddd;
            margin-bottom: 20px;
        }
    </style>
{% endblock %}

{% block page_content %}
<div class="ranking-page-container">
    <div class="row ranking-row">
        <!-- Sidebar con botones de juegos -->
        <div class="col-md-3 sidebar-col">
            <div class="sidebar">
                <h3><i class="bi bi-controller"></i> Juegos</h3>
                
                <div class="games-list">
                    <!-- Botones de cada juego -->
                    {% for juego in juegos %}
                    {% set position = loop.index %}
                    <a href="{{ path('app_game_ranking_juego', {'id': juego.id}) }}" 
                       class="btn game-btn {% if selectedJuego and selectedJuego.id == juego.id %}active{% endif %}">
                        <div class="game-position {% if position == 1 %}gold{% elseif position == 2 %}silver{% elseif position == 3 %}bronze{% endif %}">
                            {{ position }}º
                        </div>
                        <div class="game-info">
                            <div>
                                <i class="bi bi-joystick"></i> {{ juego.nombre }}
                            </div>
                            {% if top1PorJuego[juego.id] is defined and top1PorJuego[juego.id] %}
                                <div class="game-top1">
                                    <span class="player-name">{{ top1PorJuego[juego.id].usuario.nombre }}</span> - 
                                    <span class="player-score">{{ top1PorJuego[juego.id].puntos }} pts</span>
                                </div>
                            {% else %}
                                <div class="game-top1">
                                    <span style="opacity: 0.6;">Sin partidas</span>
                                </div>
                            {% endif %}
                        </div>
                    </a>
                    {% endfor %}
                </div>
            </div>
        </div>
        
        <!-- Contenedor del ranking -->
        <div class="col-md-9 ranking-col">
            <div class="ranking-container">
                <div class="ranking-header">
                    {% if selectedJuego %}
                        <h2><i class="bi bi-trophy-fill"></i> Ranking de {{ selectedJuego.nombre }}</h2>
                        {% if selectedJuego.description %}
                            <p class="mb-0">{{ selectedJuego.description }}</p>
                        {% endif %}
                    {% endif %}
                </div>
                
                {% if ranking is empty %}
                    <div class="no-data">
                        <i class="bi bi-exclamation-circle"></i>
                        <h4>No hay partidas registradas</h4>
                        <p>¡Sé el primero en jugar y aparecer en el ranking!</p>
                    </div>
                {% else %}
                    <table class="ranking-table">
                        <thead>
                            <tr>
                                <th style="width: 80px;">Posición</th>
                                <th>Jugador</th>
                                <th style="width: 150px;">Puntos</th>
                                <th style="width: 180px;">Fecha</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for key, partida in ranking %}
                                <tr>
                                    <td>
                                        {% set position = key + 1 %}
                                        {% if position == 1 %}
                                            <span class="position gold"><i class="bi bi-trophy-fill"></i> 1º</span>
                                        {% elseif position == 2 %}
                                            <span class="position silver"><i class="bi bi-trophy-fill"></i> 2º</span>
                                        {% elseif position == 3 %}
                                            <span class="position bronze"><i class="bi bi-trophy-fill"></i> 3º</span>
                                        {% else %}
                                            <span class="position">{{ position }}º</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <i class="bi bi-person-circle"></i> 
                                        <strong>{{ partida.usuario.nombre }}</strong>
                                    </td>
                                    <td>
                                        <span class="points">{{ partida.puntos }} pts</span>
                                    </td>
                                    <td>
                                        <i class="bi bi-calendar-event"></i> 
                                        {{ partida.fecha|date('d/m/Y H:i') }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
