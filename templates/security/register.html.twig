{% extends 'base.html.twig' %}

{% block title %}Crear cuenta{% endblock %}

{% block body %}
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #1B4079 0%, #4D7C8A 100%);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }
    .register-card {
        background: #fff;
        border-radius: 18px;
        padding: 30px;
        width: 100%;
        max-width: 420px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.25);
        text-align: center;
    }
    h1 { color: #1B4079; margin-bottom: 6px; }
    .subtitle { color: #777; margin-bottom: 20px; }
    .form-group { text-align: left; margin-bottom: 14px; }
    label { font-weight: 600; color: #444; display: block; margin-bottom: 6px; }
    input[type="email"], input[type="text"], input[type="password"] {
        width: 100%; 
        padding: 12px; 
        border-radius: 12px; 
        border: 1px solid #dfe3e8;
        font-size: 1em;
        box-sizing: border-box;
        transition: border-color 0.3s;
    }
    input:focus {
        outline: none;
        border-color: #1B4079;
    }
    .btn-submit {
        width: 100%;
        background: linear-gradient(135deg, #1B4079 0%, #4D7C8A 100%);
        color: #fff;
        border: none;
        padding: 12px;
        border-radius: 12px;
        font-size: 1em;
        font-weight: 700;
        cursor: pointer;
        box-shadow: 0 8px 20px rgba(27,64,121,0.35);
        transition: transform 0.15s, box-shadow 0.15s;
        margin-top: 10px;
    }
    .btn-submit:hover { 
        transform: translateY(-1px); 
        box-shadow: 0 10px 24px rgba(27,64,121,0.45); 
    }
    .alert { 
        padding: 12px; 
        border-radius: 10px; 
        margin-bottom: 12px; 
        text-align: left;
    }
    .alert.error { 
        background: #f8d7da; 
        color: #721c24; 
        border: 1px solid #f5c6cb;
    }
    .alert.success { 
        background: #d4edda; 
        color: #155724; 
        border: 1px solid #c3e6cb;
    }
    .footer { 
        margin-top: 16px; 
        color: #666; 
        font-size: 0.9em; 
    }
    .footer a {
        color: #1B4079;
        text-decoration: none;
        font-weight: 600;
    }
    .footer a:hover {
        text-decoration: underline;
    }
</style>

<div class="register-card">
    <h1>Crear cuenta</h1>
    <p class="subtitle">Regístrate para comenzar</p>

    {% if error %}
        <div class="alert error">{{ error }}</div>
    {% endif %}

    {% for message in app.flashes('success') %}
        <div class="alert success">{{ message }}</div>
    {% endfor %}

    <form method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('register') }}">
        
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" autocomplete="email" required autofocus placeholder="tu@email.com">
        </div>

        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" id="nombre" autocomplete="name" required placeholder="Tu nombre">
        </div>

        <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" name="password" id="password" autocomplete="new-password" required placeholder="Mínimo 6 caracteres">
        </div>

        <div class="form-group">
            <label for="confirm_password">Confirmar contraseña</label>
            <input type="password" name="confirm_password" id="confirm_password" autocomplete="new-password" required placeholder="Repite la contraseña">
        </div>

        <button class="btn-submit" type="submit">
            <i class="bi bi-person-plus"></i> Crear cuenta
        </button>
    </form>

    <div class="footer">
        ¿Ya tienes cuenta? <a href="{{ path('app_login') }}">Inicia sesión</a>
    </div>
</div>

<script>
// Validación en el cliente para mejor UX
document.querySelector('form').addEventListener('submit', function(e) {
    const password = document.getElementById('password').value;
    const confirmPassword = document.getElementById('confirm_password').value;
    
    if (password !== confirmPassword) {
        e.preventDefault();
        alert('Las contraseñas no coinciden');
        return false;
    }
    
    if (password.length < 6) {
        e.preventDefault();
        alert('La contraseña debe tener al menos 6 caracteres');
        return false;
    }
});
</script>
{% endblock %}
