{% extends '_navbar.html.twig' %}

{% block title %}Mi Cuenta{% endblock %}

{% block page_content %}
<style>
    .content-wrapper {
        background: linear-gradient(135deg, #1B4079 0%, #4D7C8A 100%);
        min-height: calc(100vh - 56px);
        padding: 40px 20px;
    }
    .account-container {
        max-width: 1400px;
        margin: 0 auto;
    }
    .profile-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        margin-bottom: 30px;
    }
    .profile-header {
        display: flex;
        align-items: center;
        gap: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #e9ecef;
    }
    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: linear-gradient(135deg, #1B4079 0%, #4D7C8A 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 48px;
        font-weight: bold;
    }
    .profile-info h1 {
        color: #1B4079;
        margin: 0 0 10px 0;
    }
    .profile-info p {
        color: #666;
        margin: 5px 0;
    }
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin: 30px 0;
    }
    .stat-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        text-align: center;
        transition: transform 0.3s;
    }
    .stat-card:hover {
        transform: translateY(-5px);
    }
    .stat-icon {
        font-size: 40px;
        color: #1B4079;
        margin-bottom: 10px;
    }
    .stat-value {
        font-size: 36px;
        font-weight: bold;
        color: #1B4079;
        margin: 10px 0;
    }
    .stat-label {
        color: #666;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    .section-title {
        color: white;
        font-size: 24px;
        margin: 30px 0 20px 0;
        font-weight: bold;
    }
    .games-list {
        background: white;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }
    .game-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px;
        border-bottom: 1px solid #e9ecef;
    }
    .game-item:last-child {
        border-bottom: none;
    }
    .game-name {
        color: #1B4079;
        font-weight: 600;
        font-size: 16px;
    }
    .game-count {
        background: #8FAD88;
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: bold;
    }
    .matches-table {
        background: white;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        overflow-x: auto;
    }
    table {
        width: 100%;
        border-collapse: collapse;
    }
    th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #e9ecef;
    }
    th {
        background: #f8f9fa;
        color: #1B4079;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 12px;
        letter-spacing: 1px;
    }
    tr:hover {
        background: #f8f9fa;
    }
    .points-badge {
        background: linear-gradient(135deg, #1B4079 0%, #4D7C8A 100%);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: bold;
        display: inline-block;
    }
    .no-data {
        text-align: center;
        padding: 40px;
        color: #999;
    }
    .btn-back {
        background: #6c757d;
        color: white;
        padding: 10px 20px;
        border-radius: 10px;
        text-decoration: none;
        display: inline-block;
        margin-bottom: 20px;
        font-weight: 600;
    }
    .btn-back:hover {
        background: #5a6268;
        transform: translateY(-2px);
        transition: all 0.3s;
    }
    .btn-logout {
        background: #dc3545;
        color: white;
        padding: 10px 20px;
        border-radius: 10px;
        text-decoration: none;
        display: inline-block;
        margin-bottom: 20px;
        margin-left: 10px;
        font-weight: 600;
    }
    .btn-logout:hover {
        background: #c82333;
        color: white;
        transform: translateY(-2px);
        transition: all 0.3s;
    }
    .btn-edit-profile {
        background: #8FAD88;
        color: white;
        padding: 12px 30px;
        border-radius: 10px;
        text-decoration: none;
        display: inline-block;
        font-weight: 600;
        margin-top: 20px;
        transition: all 0.3s;
    }
    .btn-edit-profile:hover {
        background: #7F9C96;
        color: white;
        transform: translateY(-2px);
    }
    .top-buttons {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
    }
</style>

<div class="content-wrapper">
    <div class="account-container">
        <div class="top-buttons">
            <a href="{{ path('app_home') }}" class="btn-back">
                <i class="bi bi-arrow-left"></i> Volver al Inicio
            </a>
            <a href="{{ path('app_logout') }}" class="btn-logout">
                <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
            </a>
        </div>

        <div class="profile-card">
            <div class="profile-header">
                <div class="profile-avatar">
                    {{ user.nombre|slice(0, 1)|upper }}
                </div>
                <div class="profile-info">
                    <h1>{{ user.nombre }}</h1>
                    <p><i class="bi bi-envelope"></i> {{ user.email }}</p>
                    <p><i class="bi bi-calendar"></i> Miembro desde: {{ user.fechaRegistro|date('d/m/Y') }}</p>
                    <p><i class="bi bi-shield-check"></i> 
                        {% if 'ROLE_ADMIN' in user.roles %}
                            <span style="color: #C7DB94; font-weight: bold;">Administrador</span>
                        {% else %}
                            <span style="color: #4D7C8A; font-weight: bold;">Usuario</span>
                        {% endif %}
                    </p>
                </div>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
            <div style="text-align: center; padding-top: 20px; border-top: 2px solid #e9ecef;">
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn-edit-profile">
                    <i class="bi bi-pencil-square"></i> Editar Perfil
                </a>
            </div>
            {% endif %}
        </div>

        <h2 class="section-title"><i class="bi bi-graph-up"></i> Estadísticas</h2>
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon"><i class="bi bi-controller"></i></div>
                <div class="stat-value">{{ totalPartidas }}</div>
                <div class="stat-label">Partidas Jugadas</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon"><i class="bi bi-trophy"></i></div>
                <div class="stat-value">{{ totalPuntos }}</div>
                <div class="stat-label">Puntos Totales</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon"><i class="bi bi-star-fill"></i></div>
                <div class="stat-value">{{ mejorPuntuacion }}</div>
                <div class="stat-label">Mejor Puntuación</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon"><i class="bi bi-bar-chart"></i></div>
                <div class="stat-value">{{ promedioPuntos }}</div>
                <div class="stat-label">Promedio por Partida</div>
            </div>
        </div>

        {% if juegosFrecuentes|length > 0 %}
        <h2 class="section-title"><i class="bi bi-heart-fill"></i> Juegos Favoritos</h2>
        <div class="games-list">
            {% for juego, count in juegosFrecuentes|slice(0, 5) %}
            <div class="game-item">
                <span class="game-name"><i class="bi bi-joystick"></i> {{ juego }}</span>
                <span class="game-count">{{ count }} partida{{ count > 1 ? 's' : '' }}</span>
            </div>
            {% endfor %}
        </div>
        {% endif %}

        <h2 class="section-title"><i class="bi bi-clock-history"></i> Historial de Partidas</h2>
        <div class="matches-table">
            {% if partidas|length > 0 %}
            <table>
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Juego</th>
                        <th>Puntuación</th>
                    </tr>
                </thead>
                <tbody>
                {% for partida in partidas %}
                    <tr>
                        <td><i class="bi bi-calendar3"></i> {{ partida.fecha|date('d/m/Y H:i') }}</td>
                        <td><strong>{{ partida.juego.nombre }}</strong></td>
                        <td><span class="points-badge">{{ partida.puntos }} pts</span></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% else %}
            <div class="no-data">
                <i class="bi bi-inbox" style="font-size: 48px; color: #ccc;"></i>
                <p>Aún no has jugado ninguna partida. ¡Empieza a jugar para ver tu historial!</p>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
