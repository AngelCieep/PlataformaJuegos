{% extends 'layout.html.twig' %}

{% block title %}Bienvenido - Plataforma de Juegos{% endblock %}

{% block page_content %}
<style>
    .content-wrapper {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: calc(100vh - 56px);
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
    }
    
    .welcome-container {
        background: white;
        border-radius: 30px;
        padding: 60px 40px;
        box-shadow: 0 25px 80px rgba(0, 0, 0, 0.3);
        max-width: 1000px;
        width: 100%;
        text-align: center;
    }
    
    .welcome-header {
        margin-bottom: 50px;
    }
    
    .welcome-header h1 {
        color: #667eea;
        font-size: 3.5em;
        margin-bottom: 15px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        font-weight: bold;
    }
    
    .welcome-header .subtitle {
        color: #666;
        font-size: 1.3em;
        margin-bottom: 10px;
    }
    
    .user-greeting {
        display: inline-block;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 15px 30px;
        border-radius: 50px;
        font-size: 1.2em;
        margin-bottom: 30px;
        font-weight: 600;
    }
    
    .options-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 40px;
        margin-top: 40px;
    }
    
    .option-card {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        border-radius: 20px;
        padding: 50px 30px;
        text-decoration: none;
        transition: all 0.4s ease;
        cursor: pointer;
        border: 3px solid transparent;
        position: relative;
        overflow: hidden;
    }
    
    .option-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        opacity: 0;
        transition: opacity 0.4s ease;
        z-index: 0;
    }
    
    .option-card:hover::before {
        opacity: 1;
    }
    
    .option-card:hover {
        transform: translateY(-15px) scale(1.05);
        box-shadow: 0 20px 50px rgba(102, 126, 234, 0.5);
    }
    
    .option-card .content {
        position: relative;
        z-index: 1;
        transition: all 0.3s ease;
    }
    
    .option-card:hover .content {
        color: white;
    }
    
    .option-card .icon {
        font-size: 6em;
        margin-bottom: 20px;
        filter: drop-shadow(0 5px 10px rgba(0, 0, 0, 0.2));
    }
    
    .option-card h2 {
        color: #667eea;
        font-size: 2em;
        margin-bottom: 15px;
        font-weight: bold;
        transition: all 0.3s ease;
    }
    
    .option-card:hover h2 {
        color: white;
    }
    
    .option-card p {
        color: #666;
        font-size: 1.1em;
        line-height: 1.6;
        transition: all 0.3s ease;
    }
    
    .option-card:hover p {
        color: rgba(255, 255, 255, 0.95);
    }
    
    .arrow {
        font-size: 2em;
        margin-top: 20px;
        display: inline-block;
        transition: transform 0.3s ease;
    }
    
    .option-card:hover .arrow {
        transform: translateX(10px);
    }
    
    @media (max-width: 768px) {
        .welcome-header h1 {
            font-size: 2.5em;
        }
        
        .options-grid {
            grid-template-columns: 1fr;
            gap: 30px;
        }
        
        .welcome-container {
            padding: 40px 25px;
        }
    }
</style>

<div class="welcome-container">
    <div class="welcome-header">
