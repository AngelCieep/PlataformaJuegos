            <h3>Juego 3</h3>
            <p>Pr贸ximamente</p>
            <span class="status-badge coming-soon">Pr贸ximamente</span>
        </a>
        
        <a href="{{ path('app_game4') }}" class="game-card inactive">
            <div class="icon"></div>
            <h3>Juego 4</h3>
            <p>Pr贸ximamente</p>
            <span class="status-badge coming-soon">Pr贸ximamente</span>
        </a>
    </div>
    
    <div class="logout-section">
        <a href="{{ path('app_logout') }}" class="btn-logout"> Cerrar Sesi贸n</a>
    </div>
</div>
{% endblock %}
